    <form action="/figures" method="post">
      <label><h2>New Figure:</h2></label>
      <label>Name:</label><br>
      <input type="text" id="figure_name" name="figure[name]"><br>

      <label><h4>Titles:</h4></label>
      <% Title.all.each do |title| %>
        <label><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
      <% end %>
      <label>Title:</label><br>
      <input type="text" id="new_title" name="title[name]"><br><br>

      <label>Landmark Name:</label><br>
      <input type="text" id="new_landmark" name="landmark[name]"><br><br>

      <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
      <%end%><br

      <label>Year:</label><br>
      <input type="text" name="landmark[year_completed]"><br>
      <input type="submit" value="Create New Figure">
    </form>
